<%= simple_form_for @user, :url => update_pass_path(@user), defaults: { input_html: {class: 'form-control'}} do |f| %>

<section id="login">

	<div class="container">

		<div class="row">

			<div class="col-xs-12 center img-margin">
				<img class="inline" src="<%= image_url ('login-logo.png') %>" alt="Logo">
			</div>

			<div class="col-xs-12">

				<div class="row">

					<div class="col-xs-3 login-margin">
						<p>
							Digite sua <b>nova senha</b> e confirme para que tenha acesso ao sistema.
						</p>
						<div class="form-group">
							<label for="#">Senha</label>
							<%= f.input :password, label: false, :placeholder => 'Digite a nova senha' %>
							<%= hidden_field_tag "user[password_to_save]", f.object.password_to_save %>
						</div>
					</div>

				</div>

				<div class="row">

					<div class="col-xs-3 login-margin">
						<div class="form-group">
							<label for="#">Confirmação de senha</label>
							<%= f.input :password_confirmation, label: false, :placeholder => 'Confirmação de senha'%>
						</div>
						<div>
							<button class="pull-right" type="submit">Alterar senha</button>
						</div>
					</div>

				</div>

			</div>

		</div>

	</div>

</section>
<% end %>
