<div class="container" id="libraries">
	
	<!-- Head -->
	<div class="row">
		<div class="col-xs-12 margin-head">
			<h1 class="inline">Jurídico > Biblioteca</h1>
			<a class="pull-right new-btn" href="<%= new_library_path %>">Novo</a>
		</div>
	</div>

	<!-- Filter -->
	<div class="row">
		<div class="col-xs-12">
			<div class="row">
				<div class="col-xs-2">
					<div class="form-group">
						<label for="#">Nome</label>
						<select class="form-control chosen">
							<option>Selecione</option>
						</select>
					</div>
				</div>
				<div class="col-xs-3">
					<div class="form-group">
						<label for="#">Palavra-chave</label>
						<input type="text" class="form-control">
					</div>
				</div>
				<div class="col-xs-2">
					<div class="form-group">
						<label for="#">Categoria</label>
						<select class="form-control chosen">
							<option>Selecione</option>
						</select>
					</div>
				</div>
				<div class="col-xs-2">
					<button class="filter-btn" type="submit">Filtrar</button>
				</div>
			</div>
		</div>
	</div>
	
	<!-- Table -->
	<div class="row">
		<div class="col-xs-12 table-actions">
			<table class="table datagrid">
				<thead>
