<%= simple_form_for @organ, defaults: { input_html: {class: 'form-control'}} do |f| %>

<div class="col-xs-12">

	<div class="row">
		<div class="col-xs-2">
			<div class="form-group">
				<label>Esfera*</label>
				<%= f.association :sphere, collection: Sphere.all.order(:name), label_method: :name, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control chosen'} %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-3">
			<div class="form-group">
				<label>Nome do órgão*</label>
				<%= f.input :name, label: false %>
			</div>
		</div>
		<div class="col-xs-2">
			<div class="form-group">
				<label>CNPJ*</label>
				<%= f.input :cnpj, label: false, input_html: {class: 'string form-control cnpj'} %>
			</div>
		</div>
		<div class="col-xs-3">
			<div class="form-group">
				<label>Site</label>
				<%= f.input :site, label: false %>
			</div>					
		</div>
		<div class="col-xs-4">
			<div class="form-group">
				<label>Portais</label>
				<%= f.association :portals, collection: Portal.all.order(:name), label_method: :name, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control chosen'} %>
			</div>	
		</div>
	</div>

	<div class="row">
		<div class="col-xs-3">
			<div class="form-group">
				<label>Email geral</label>
				<%= f.input :email, label: false %>
			</div>
		</div>
		<div class="col-xs-3">
			<div class="form-group">
				<label>Telefone geral*</label>
				<%= f.input :phone, label: false, input_html: {class: 'string form-control custom-tel'} %>
			</div>
		</div>		
		<div class="col-xs-3">
			<div class="form-group">
				<label>Número de identificação</label>
				<%= f.input :identification_number, label: false %>
			</div>
		</div>	
	</div>

	<h2>Endereço</h2>

	<div class="row">
		<div class="col-xs-2">
			<div class="form-group">
				<label>CEP*</label>
				<%= f.input :zipcode, label: false, input_html: {class: 'string form-control cep'} %>
			</div>
		</div>
		<div class="col-xs-3">
			<div class="form-group">
				<label>Logradouro*</label>
				<%= f.input :address, label: false %>
			</div>
		</div>
		<div class="col-xs-1">
			<div class="form-group">
				<label>Número*</label>
				<%= f.input :number, label: false %>
			</div>
		</div>
		<div class="col-xs-3">
			<div class="form-group">
				<label>Complemento</label>
				<%= f.input :complement, label: false %>
			</div>
		</div>
		<div class="col-xs-3">
			<div class="form-group">
				<label>Bairro*</label>
				<%= f.input :district, label: false %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-2">
			<div class="form-group">
				<label>Estado*</label>
				<%= f.association :state, collection: State.all.order(:name), label_method: :acronym, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control chosen'} %>
			</div>
		</div>
		<div class="col-xs-2">
			<div class="form-group">
				<label>Cidade*</label>
				<%= f.association :city, collection: City.all.order(:name), label_method: :name, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control chosen'} %>
			</div>
		</div>
	</div>

	<div class="form-group">
		<label>Observações gerais</label>
		<%= f.input :observation, label: false, :input_html => {rows: '4'} %>
	</div>

	<div class="branch_group">
		<%= f.fields_for :organs, defaults: { input_html: { class: 'form-control' } } do |branch| %>
		<br><br>
		<div class="row">
			<div class="col-xs-2">
				<div class="form-group">
					<label>Esfera*</label>
					<%= branch.association :sphere, collection: Sphere.all.order(:name), label_method: :name, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control width-input chosen'} %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-3">
				<div class="form-group">
					<label>Nome do órgão*</label>
					<%= branch.input :name, label: false %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>CNPJ*</label>
					<%= branch.input :cnpj, label: false %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Site</label>
					<%= branch.input :site, label: false %>
				</div>					
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Portal eletrônico</label>
					<%= branch.input :eletronic_portal, label: false %>
				</div>							
			</div>
		</div>

		<div class="row">
			<div class="col-xs-3">
				<div class="form-group">
					<label>Email geral</label>
					<%= branch.input :email, label: false %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Telefone geral*</label>
					<%= branch.input :phone, label: false, input_html: {class: 'string form-control custom-tel'} %>
				</div>
			</div>		
			<div class="col-xs-3">
				<div class="form-group">
					<label>Número de identificação</label>
					<%= branch.input :identification_number, label: false %>
				</div>
			</div>	
		</div>

		<h2>Endereço</h2>

		<div class="row">
			<div class="col-xs-2">
				<div class="form-group">
					<label>CEP*</label>
					<%= branch.input :zipcode, label: false, input_html: {class: 'string optional form-control dynamic_cep_filial'} %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Logradouro*</label>
					<%= branch.input :address, label: false %>
				</div>
			</div>
			<div class="col-xs-1">
				<div class="form-group">
					<label>Número*</label>
					<%= branch.input :number, label: false %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Complemento*</label>
					<%= branch.input :complement, label: false %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Bairro*</label>
					<%= branch.input :district, label: false %>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-xs-2">
				<div class="form-group">
					<label>Estado*</label>
					<%= branch.association :state, collection: State.all.order(:name), label_method: :acronym, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control width-input chosen dynamic_state_filial'} %>
				</div>
			</div>
			<div class="col-xs-2">
				<div class="form-group">
					<label>Cidade*</label>
					<%= branch.association :city, collection: City.all.order(:name), label_method: :name, value_method: :id, label: false, include_blank: "-- Selecione --", input_html: {class: 'select optional form-control width-input chosen dynamic_city_filial'} %>
				</div>
			</div>
		</div>

		<div class="form-group">
			<label>Observações gerais</label>
			<%= branch.input :observation, label: false, :input_html => {rows: '4'} %>
		</div>

		<%= branch.check_box :_destroy %>
		<div class="remove-div-filial">
			<%= branch.label :_destroy, 'Remover' %>
		</div>

		<% end %>
	</div>

	<div class="add-filial">
		<%= f.submit 'Adicionar Unidade', :name => "add_branch" %>
	</div>

	<h2>Setores</h2>

	<div class="sector_group">
		<% sectors_counter = 0 %>
		<%= f.fields_for :sectors, defaults: { input_html: { class: 'form-control' } } do |sector| %>
		<div class="row">
			<div class="col-xs-3">
				<div class="form-group">
					<label>Nome do setor*</label>
					<%= sector.input :name, label: false %>
				</div>	
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Nome completo do responsável*</label>
					<%= sector.input :responsible_name, label: false %>
				</div>	
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Departamento</label>
					<%= sector.input :department, label: false %>
				</div>	
			</div>
			<div class="col-xs-3">
				<div class="form-group">
					<label>Cargo/Função</label>
					<%= sector.input :office, label: false %>
				</div>	
			</div>
		</div>

		<div class="row">
			<div class="col-xs-3">
				<label>Telefone</label>
				<div class="form-group">
					<% first_phone = false %>
					<% phones_counter_organs = 0 %>
					<div id="group_phones_<%=sectors_counter%>" class="organs-group">
						<%= sector.fields_for :phone_sectors, defaults: { input_html: { class: 'form-control width-input' } } do |phone| %>
						<%= phone.input :phone, label: false, input_html: { class: 'form-control width-input custom-tel' } %>
						<% if phone.object.persisted? %>
						<td class="text text-center">
							<span data-toggle="tooltip" title="Remover">
								<%= phone.check_box :_destroy %>
								<% phone.label :_destroy, "Remover" %>
							</span>
						</td>
						<% else %>
						<% if !first_phone %>
						<% first_phone = true %>
						<% else %>
						<a data-toggle="tooltip" title="Remover" id="delete_phone_dynamic_<%=sectors_counter%>_<%=phones_counter_organs%>" class="delete_phone_dynamic_specific">x</a>
						<% end %>
						<% end %>
						<% phones_counter_organs += 1 %>
						<% end %>
					</div>
					<a class="add-anchor add_new_phone_dynamic" id="add_new_phone_dynamic_<%=sectors_counter%>">
						<div class="add-input">
							+
						</div>
					</a>
					<%= hidden_field_tag "phones_counter_organs_#{sectors_counter}", phones_counter_organs %>
				</div>
			</div>		
			<div class="col-xs-3">
				<label>Email</label>
				<div class="form-group">
					<% first_email = false %>
					<% emails_counter_organs = 0 %>
					<div id="group_emails_<%=sectors_counter%>" class="organs-group">
						<%= sector.fields_for :email_sectors, defaults: { input_html: { class: 'form-control width-input' } } do |email| %>
						<%= email.input :email, label: false %>
						<% if email.object.persisted? %>
						<td class="text text-center">
							<span data-toggle="tooltip" title="Remover">
								<%= email.check_box :_destroy %>
								<% email.label :_destroy, "Remover" %>
							</span>
						</td>
						<% else %>
						<% if !first_email %>
						<% first_email = true %>
						<% else %>
						<a data-toggle="tooltip" title="Remover" id="delete_email_dynamic_<%=sectors_counter%>_<%=emails_counter_organs%>" class="delete_email_dynamic_specific">x</a>
						<% end %>
						<% end %>
						<% emails_counter_organs += 1 %>
						<% end %>
					</div>
					<a class="add-anchor add_new_email_dynamic" id="add_new_email_dynamic_<%=sectors_counter%>">
						<div class="add-input">
							+
						</div>
					</a>
					<%= hidden_field_tag "emails_counter_organs_#{sectors_counter}", emails_counter_organs %>
				</div>
			</div>	
		</div>

		<div class="form-group">
			<label>Observações</label>
			<%= sector.input :observation, label: false, :input_html => {rows: '4'} %>
		</div>

		<%= sector.check_box :_destroy %>
		<div class="remove-div-sector">
			<%= sector.label :_destroy, 'Remover' %>
		</div>
		<br><br>
		<% sectors_counter += 1 %>
		<% end %>
	</div>

	<div class="add-setor">
		<%= f.submit 'Adicionar setor', :name => "add_sector" %>
	</div>
	<% if !f.object.persisted? %>
	<button class="save-btn" type="submit">Salvar</button>
	<% else %>
	<button class="save-btn" type="submit">Salvar/Remover Marcados</button>
	<% end %>
	<div class="remove-data">
		<% if !f.object.persisted? %>
		<%= f.submit 'Remover marcados', :name => "remove_data" %>
		<% end %>
	</div>

</div>

<% end %>